{
    "$schema": "/etc/xdg/swaync/configSchema.json",
    "positionX": "center",
    "positionY": "top",
    "control-center-margin-top": 130,
    "control-center-margin-bottom": 130,
    "control-center-margin-right": 0,
    "control-center-margin-left": 0,
    "notification-icon-size": 50,
    "notification-body-image-height": 100,
    "notification-body-image-width": 200,
    "timeout": 1,
    "timeout-low": 1,
    "timeout-critical": 20,
    "fit-to-screen": true,
    "control-center-width": 350,
    "notification-window-width": 350,
    "keyboard-shortcuts": true,
    "image-visibility": "when-available",
    "transition-time": 200,
    "hide-on-clear": true,
    "hide-on-action": true,
    "script-fail-notify": true,
    "widgets": [
        "title",
        "notifications",
        "mpris"
    ],
    "widget-config": {
        "title": {
            "text": "󰂚   Notifications",
            "clear-all-button": true,
            "button-text": "󰎟"
        },
        "dnd": {
            "text": "Do Not Disturb"
        },
        "label": {
            "max-lines": 1,
            "text": "Notification Center"
        },
        "mpris": {
            "image-size": 96,
            "image-radius": 10
        }
    },
    "scripts": {
        "notification-controller": {
            "exec": "zsh /home/phinixr/.config/swaync/notification-controller.sh",
            "app-name": ".*"
        }
    }
}